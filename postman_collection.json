              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symptoms\": \"I have been experiencing fever and persistent cough for the last 3 days\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/symptom-checker/check",
              "host": ["{{baseUrl}}"],
              "path": ["api", "symptom-checker", "check"]
